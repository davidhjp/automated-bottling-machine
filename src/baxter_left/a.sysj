Baxter(
		output boolean channel baxterReady;
		input boolean channel incomingBaxter;
		input signal capped;
		)->{
//   Scanner key = new Scanner(System.in);
	loop{
		send baxterReady(true);

		System.out.println("waiting for a bottle..");
		receive incomingBaxter;

		send baxterReady(false);

//     System.out.println();
		System.out.print("Detected a bottle, press enter to continue..");
//     String val = key.nextLine();
		await(capped);

		pause;
	}
}
